apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontend-deployment
spec:
  selector:
    matchLabels:
      app: frontend
  template:
    metadata:
      labels:
        app: frontend
    spec:
      containers:
      - name: frontend-container
        image: joaoppc2002/frontend:latest
        ports:
        - containerPort: 80
        env:
        - name: VUE_API_DOMAIN
          value: "http://{{ gateway_ip }}:8888"
